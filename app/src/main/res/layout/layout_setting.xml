<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_headset_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/headset_setting"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/first_divide"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="@color/divideColor"
        app:layout_constraintTop_toBottomOf="@id/tv_headset_setting" />

    <CheckBox
        android:id="@+id/cb_awareness_headset"
        style="@style/CheckBoxStyle"
        android:text="@string/setting_headset_bluetooth_notification"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/first_divide" />

    <TextView
        android:id="@+id/tv_recommend_rule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/setting_recommendation"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cb_awareness_headset" />

    <View
        android:id="@+id/second_divide"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="@color/divideColor"
        app:layout_constraintTop_toBottomOf="@id/tv_recommend_rule" />

    <CheckBox
        android:id="@+id/cb_awareness_time"
        style="@style/CheckBoxStyle"
        android:text="@string/setting_detect_time_status"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/second_divide" />

    <CheckBox
        android:id="@+id/cb_awareness_behavior"
        style="@style/CheckBoxStyle"
        android:text="@string/setting_detect_behavior_status"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cb_awareness_time" />


</androidx.constraintlayout.widget.ConstraintLayout>